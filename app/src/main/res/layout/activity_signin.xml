<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".SigninActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Time for Adventure"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/roboto"
        android:hint="Email"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:hint="Password"
        android:layout_marginTop="23dp"
        android:paddingStart="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textColor="@color/white"
        android:paddingRight="12dp"
        android:longClickable="false"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >

        <Button
            android:id="@+id/goto_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textFontWeight="700"
            android:fontFamily="@font/roboto"
            android:elevation="4dp"
            android:backgroundTint="#025FEA"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="160dp"
        android:layout_height="18dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/forgot_password_click_effect"
        android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:foreground="@drawable/linear_layout_effect"
            android:background="@drawable/button_background_white_border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/google_icon" />

            <Button
                android:id="@+id/continueWithGoogleSignin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:backgroundTint="@color/bag"
                android:elevation="3dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Continue with Google"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/creatanaccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="4dp"
        android:foreground="@drawable/linear_layout_effect"
        android:background="@drawable/button_background_white_border"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:backgroundTint="@color/bag"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Create an account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp"
            />
    </LinearLayout>

</LinearLayout>